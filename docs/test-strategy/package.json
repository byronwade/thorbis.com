{
  "name": "@thorbis/test-strategy",
  "version": "1.0.0",
  "description": "Comprehensive test strategy and failure drills for Thorbis Business OS",
  "main": "validate-test-strategy.js",
  "scripts": {
    "validate": "node validate-test-strategy.js",
    "test-matrix": "node -e \"require('./validate-test-strategy.js').generateCITestMatrix({toolContractTests:{pass:true},rlsTests:{pass:true},e2eScenarios:{pass:true},chaosDrills:{pass:true}})\"",
    "test": "npm run validate"
  },
  "keywords": [
    "thorbis",
    "test-strategy",
    "tool-contracts",
    "rls-security",
    "e2e-testing",
    "chaos-engineering",
    "failure-drills",
    "test-automation",
    "security-testing",
    "performance-testing"
  ],
  "author": "Thorbis Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thorbis/thorbis-business-os.git",
    "directory": "test-strategy"
  },
  "files": [
    "tool-contract-tests.md",
    "rls-tests.md",
    "e2e-scenarios.md",
    "chaos-drills.md",
    "validate-test-strategy.js",
    "README.md"
  ],
  "testing": {
    "frameworks": [
      "tool-contract-testing",
      "rls-security-validation",
      "end-to-end-scenarios",
      "chaos-engineering"
    ],
    "coverage_targets": {
      "tool_contracts": "95%",
      "rls_policies": "100%",
      "e2e_workflows": "90%",
      "chaos_scenarios": "85%"
    },
    "execution_environments": [
      "staging",
      "production-like",
      "chaos-testing"
    ]
  },
  "test_execution": {
    "tool_contract_tests": {
      "total_tools": 15,
      "test_categories": 5,
      "estimated_duration": "8-12 minutes"
    },
    "rls_security_tests": {
      "total_roles": 5,
      "total_scenarios": 89,
      "estimated_duration": "10-15 minutes"
    },
    "e2e_scenarios": {
      "total_workflows": 12,
      "industries_covered": 4,
      "estimated_duration": "45-60 minutes"
    },
    "chaos_drills": {
      "total_services": 8,
      "drill_types": 6,
      "estimated_duration": "2-4 hours"
    }
  }
}
