# Thorbis Business OS Environment Variables
# Copy this file to .env.local and fill in your actual values

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration (Billing System)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Billing Monitor Configuration
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=false
ENABLE_WEBHOOK_ALERTS=false
HEALTH_CHECK_INTERVAL=30000

# Email Notification Configuration (for billing alerts)
EMAIL_API_KEY=your_email_service_api_key
FROM_EMAIL=billing@thorbis.com
REPLY_TO_EMAIL=support@thorbis.com

# Slack Notification Configuration (for billing alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#billing-alerts

# Custom Webhook Configuration (comma-separated URLs)
CUSTOM_WEBHOOKS=https://api.yourapp.com/webhooks/billing,https://api.anotherapp.com/billing-alerts

# SMS Configuration (optional, for critical alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
SENTRY_DSN=your_sentry_dsn

# Development Tools
NEXT_PUBLIC_VERCEL_URL=
ANALYZE=false
NEXT_DEBUG=false

# Feature Flags
NEXT_PUBLIC_FEATURE_BILLING_DASHBOARD=true
NEXT_PUBLIC_FEATURE_USAGE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_REAL_TIME_ALERTS=true