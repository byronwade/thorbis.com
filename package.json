{
  "name": "thorbis-unified-site",
  "version": "1.0.0",
  "private": true,
  "description": "Unified Thorbis Business OS - All-in-one Next.js Application",
  "keywords": [
    "business-os",
    "next.js",
    "typescript",
    "ai-first",
    "home-services",
    "restaurant-pos",
    "auto-services",
    "retail-pos",
    "education-platform",
    "unified-app"
  ],
  "scripts": {
    "dev": "next dev --port 3000",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "bundle:analyze": "ANALYZE=true next build && npx webpack-bundle-analyzer .next/analyze/client.js",
    "bundle:size": "npx bundlesize",
    "perf:audit": "npm run build && npx lighthouse http://localhost:3000 --output=json --output=html --output-path=./lighthouse-report",
    "perf:test": "npm run type-check && npm run lint && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:accessibility": "playwright test --project=accessibility",
    "test:e2e:performance": "playwright test --project=performance",
    "test:e2e:visual": "playwright test --project=visual",
    "test:e2e:report": "playwright show-report",
    "test:install": "playwright install",
    "clean": "rm -rf .next .turbo node_modules lighthouse-report.json lighthouse-report.html",
    "git:check-large-files": "./scripts/git-large-file-check.sh",
    "pre-commit": "npm run git:check-large-files && npm run lint && npm run type-check",
    "db:generate": "echo 'Generate database types'",
    "db:push": "echo 'Push database changes'",
    "db:seed": "echo 'Seed database'",
    "billing-monitor": "tsx scripts/setup-billing-monitor.ts",
    "billing-monitor:health": "tsx scripts/setup-billing-monitor.ts health",
    "billing-monitor:report": "tsx scripts/setup-billing-monitor.ts report",
    "billing-monitor:test": "tsx scripts/setup-billing-monitor.ts test"
  },
